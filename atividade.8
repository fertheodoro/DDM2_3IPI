<script>
    function somarNumeros(numero1, numero2) {
        return numero1 + numero2;
    }

    var resultado1 = somarNumeros(5, 3);
    var resultado2 = somarNumeros(10, -2);
    var resultado3 = somarNumeros(7.5, 2.5);

    document.write("<p>5 + 3 = " + resultado1 + "</p>");
    document.write("<p>10 + (-2) = " + resultado2 + "</p>");
    document.write("<p>7.5 + 2.5 = " + resultado3 + "</p>");
</script>

